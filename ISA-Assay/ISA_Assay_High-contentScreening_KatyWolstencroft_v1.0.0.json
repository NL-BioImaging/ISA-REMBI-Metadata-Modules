{
    "$defs": {
        "AnnotationGroupEnum": {
            "description": "Standard annotation groups for organizing metadata fields in ISA modules",
            "enum": [
                "assay",
                "assay_component",
                "biosample",
                "image_data",
                "image_acquisition",
                "specimen",
                "protocols"
            ],
            "title": "AnnotationGroupEnum",
            "type": "string"
        },
        "AssayContent": {
            "additionalProperties": false,
            "description": "Content schema for ISA Assay",
            "properties": {
                "assay_data_url": {
                    "description": "OMERO url link to this screen",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "assay_description": {
                    "description": "Description of screen plus additional unstructured information about screen not covered elsewhere. Stages of HCS: either primary screen, secondary screen or validation screen. EFO terms",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "assay_external_url": {
                    "description": "ELN or any other external url link to this screen",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "assay_internal_id": {
                    "description": "Experimental ID, e.g. aMV-010, linked to ELN or labjournal",
                    "type": "string"
                },
                "assay_number_of_biological_replicates": {
                    "description": "Total number of biological replicates",
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "assay_technology_type": {
                    "description": "Imaging method, FBbi terms",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "assay_title": {
                    "description": "Screen name",
                    "type": "string"
                },
                "assay_type": {
                    "description": "List of options: sub types of HCS e.g. Gene Knock down, RNAi, compound, EFO terms",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "cell_lines_clone_number": {
                    "description": "Storage location DB info",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "cell_lines_passage_number": {
                    "description": "Passage number of your cells. In case different passage number is used for the  replicates, please indicate it in Comment_users",
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "cell_lines_storage_location": {
                    "description": "Storage location according to Database used or at least location e.g. Example -150 liquid N2 tank 4th floor GE4.xx",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel1_entity": {
                    "description": "Entity visualized",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel1_id": {
                    "description": "Sequential id of channel order in your image",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel1_label": {
                    "description": "Label used for entity (example: Nuclei) Best practice to use similar label as your CP-pipeline",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel1_visualization_method": {
                    "description": "Visualization method",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel2_entity": {
                    "description": "Entity visualized",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel2_id": {
                    "description": "Sequential id of channel order in your image",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel2_label": {
                    "description": "Label used for entity (example: GFP-LC3) Best practice to use similar label as your CP-pipeline",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel2_visualization_method": {
                    "description": "Visualization method",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel3_entity": {
                    "description": "Entity visualized",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel3_id": {
                    "description": "Sequential id of channel order in your image",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel3_label": {
                    "description": "Label used for entity (example: PI) Best practice to use similar label as your CP-pipeline",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel3_visualization_method": {
                    "description": "Visualization method",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel4_entity": {
                    "description": "Entity visualized",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel4_id": {
                    "description": "Sequential id of channel order in your image",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel4_label": {
                    "description": "Label used for entity (example: Annexin-V) Best practice to use similar label as your CP-pipeline",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel4_visualization_method": {
                    "description": "Visualization method",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "channel_transmission_id": {
                    "description": "Channel id is dependent on different machines, first or last. If No transmission is acquired state NA",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "content_id": {
                    "description": "Identifier for content instances",
                    "type": "string"
                },
                "image_number_of_channels": {
                    "description": "Indicate number of channels in your image, single channel image c=1, including your TD channel",
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "image_number_of_pixels_x": {
                    "description": "Indicate number of pixels in x in images",
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "image_number_of_pixels_y": {
                    "description": "Indicate number of pixels in y in images"
                },
                "image_number_of_timepoints": {
                    "description": "Indicate number of time point(s) in your image",
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "image_number_of_z_stacks": {
                    "description": "Indicate number z stacks in image, single image is z=1",
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "image_sites_per_well": {
                    "description": "Number of fields, numeric value",
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "imaging_protocol": {
                    "description": "URL to protocols.io or protocols in ELN, at least protocol file name  or free text description of imaging protocol",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "microscope_id": {
                    "description": "URL to micrometa app file link or other url describing your microscope. At least Microscope name.",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "number_of_plates": {
                    "description": "Total number of plates, n-plates",
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "sample_preparation_protocol": {
                    "description": "Sample preparation method (Formaldehyde (PFA) fixed tissue, Live cells, unfixed tissue). FBbi terms",
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "required": [
                "assay_title",
                "assay_internal_id",
                "content_id"
            ],
            "title": "AssayContent",
            "type": "object"
        },
        "AssayModule": {
            "additionalProperties": false,
            "description": "ISA Assay module definition for high-content screening",
            "title": "AssayModule",
            "type": "object"
        },
        "MetadataContent": {
            "additionalProperties": false,
            "description": "Base class for module content. Each module should define a content class that extends this class.",
            "properties": {
                "content_id": {
                    "description": "Identifier for content instances",
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "required": [
                "content_id"
            ],
            "title": "MetadataContent",
            "type": "object"
        },
        "MetadataModule": {
            "additionalProperties": false,
            "description": "Base marker class for module definitions.",
            "title": "MetadataModule",
            "type": "object"
        },
        "ModuleLevelMetadata": {
            "additionalProperties": false,
            "description": "Defines the metadata that should be associated with each module definition through top-level annotations.",
            "properties": {
                "created_by": {
                    "description": "Person(s) who created the module",
                    "type": "string"
                },
                "created_by_affiliation": {
                    "description": "Affiliation of the creator(s)",
                    "type": "string"
                },
                "date_template_generated": {
                    "description": "Date when the template was generated",
                    "format": "date",
                    "type": "string"
                },
                "module_description": {
                    "description": "A description of what this module is used for",
                    "type": "string"
                },
                "module_model": {
                    "description": "Whether this metadata template module belongs to the ISA specifications or the REMBI guidelines",
                    "type": "string"
                },
                "module_name": {
                    "description": "One of the allowed ISA or REMBI metadata module names",
                    "type": "string"
                },
                "module_scope": {
                    "description": "The scope of the module (use EDAMBioImaging as suggested ontology)",
                    "type": "string"
                },
                "module_scope_term_accession": {
                    "description": "The term accession for the module scope",
                    "type": "string"
                },
                "module_template_version": {
                    "description": "The version of this module template",
                    "pattern": "^v\\d+\\.\\d+\\.\\d+$",
                    "type": "string"
                }
            },
            "required": [
                "module_model",
                "module_name",
                "module_description",
                "module_template_version",
                "module_scope",
                "module_scope_term_accession",
                "date_template_generated",
                "created_by",
                "created_by_affiliation"
            ],
            "title": "ModuleLevelMetadata",
            "type": "object"
        },
        "ModuleReference": {
            "additionalProperties": false,
            "description": "Reference to another module with version constraints",
            "properties": {
                "maximum_version": {
                    "description": "Maximum version supported for compatibility",
                    "pattern": "^v\\d+\\.\\d+\\.\\d+$",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "minimum_version": {
                    "description": "Minimum version required for compatibility",
                    "pattern": "^v\\d+\\.\\d+\\.\\d+$",
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "module_id": {
                    "description": "Identifier for the referenced module",
                    "type": "string"
                }
            },
            "required": [
                "module_id"
            ],
            "title": "ModuleReference",
            "type": "object"
        }
    },
    "$id": "https://example.org/schemas/isa_assay",
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "additionalProperties": true,
    "metamodel_version": "1.7.0",
    "title": "ISA_Assay",
    "type": "object",
    "version": "v1.0.0"
}
